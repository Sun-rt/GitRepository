}
.footerlink a:hover{
	color: #FFF;
	background: rgba(0,0,0,0.2);
	display: block;
}

/*Footer*/
#footer {
	line-height: 2em;
	overflow: hidden;
	padding: 120px 60px;
	text-align: center;
}
#footer p{
	font-size: 12px;
	line-height: 2em;
	color: rgba(256,256,256,0.6);
	text-align: center;
	margin-bottom: 10px;
}
#footer a {
	font-size: 12px;
	line-height: 2em;
	color: rgba(256,256,256,0.6);
}


/*Themes*/

#themes li{
	position: relative;
	list-style: none;
	margin-bottom: 40px;
}
#themes li .themetext {
	display: none;
	transition: all 1s ease-in-out;
	position: absolute;
	bottom: 0;
	margin-bottom: 10px;
}
#themes li:hover .themetext {
	text-align: center;
	display: block;
	width: 700px;
	font-size: 20px;
	background: rgba(0,0,0,0.5);
	margin-bottom: 10px;
}
#themes li:hover .themetext a,#themes li:hover .themetext a:hover{
	color: #FFF;
}


/* Comments */
#comments {
	color: #C9C9C9;
	width: 768px;
	margin: 20px auto;
	
}

#respond_box,.comment-respond {
	margin: 20px 0px 0;
}
ol.commentlist {
	margin: 0 0px;
	padding:0px;
	width: 100%;
	list-style-type: none; overflow: visible; margin-bottom: 0px;
}
li.comment img {border:none;}
li.comment .comment-body {
	padding: 20px 0;
	margin: 20px 0;
	position: relative;
}
li.comment .comment-meta {
	overflow:hidden;
	float:left;
	display:block;
	width:50%;
}
li.comment .comment-text {
	padding-bottom:10px;
}
li.comment .avatar {
	left:-45px;

}

ul li {
	list-style:none;
}
.clear {
	clear: both;
}
#container {
	position: relative;
}

.site {
	width: 900px;
	margin: 100px auto 0 auto;
	background: rgba(0,0,0,0.21);
}
.content {
	margin: 0;
}

#banner {
	margin-top: 0;
	padding: 60px 20px;
	overflow: hidden;
	text-align: center;
}
#authorgravatar img{
	margin: 0px auto;
	border-radius: 50%;
	width: 154px;
	height: 154px;
	transition: All 1s ease-in-out;
}
#authorgravatar img:hover {
 	-moz-transform: rotate(360deg);
	-webkit-transform: rotate(360deg);
	-o-transform: rotate(360deg);
	-ms-transform: rotate(360deg);
	transform: rotate(360deg);  
}

.blogtitle a{
	color: #32D2B6;
	font-size: 60px;
	font-weight: lighter;
	font-family: 方正兰亭超细黑简体,"Microsoft YaHei",微软雅黑,"Microsoft JhengHei",华文细黑,STHeiti,MingLiu;
}
#banner h3 {
	color: rgba(256,256,256,0.9);
	font-size: 15px;
	font-weight: lighter;
	letter-spacing: 4px;
}
/* Sidebar */

.menu {
	display: block;
	margin: 0 auto;
	background: rgba(0,0,0,0.1);
	overflow: hidden;
}
.menu li{
	list-style:none;
	text-align: center;
	float: left;
}

.menu li a{
	font-family: "Microsoft YaHei",微软雅黑,"Microsoft JhengHei",华文细黑,STHeiti,MingLiu;
	font-weight: lighter;
	white-sp335868: nowrap;
	display: block;
	text-transform: uppercase;
	color: rgba(256,256,256,0.8);
	font-size: 14px;
	padding: 10px 40px;
	margin: 0;
	transition: all 0.2s ease-out;
}

.menu li a:hover{
	color: #FFF;
	background: #32D2B6;
	display: block;
}

/*Post meta*/
.post_meta, .post_meta p, .post_meta span,.post_meta a{
	text-align: center;
	color: rgba(255,255,255,0.5);
}
.post_meta{
	font-size: 12px;
	line-height: 22px;
	color: rgba(255,255,255,0.5);
	margin: 30px 0;
}

/*Post*/
.singlecontent {
	padding: 80px 0;
}

.post,.singlecontent {
	padding: 80px;
	overflow: hidden;
	position:relative;
	overflow: hidden;
	border-top: 1px solid rgba(0,0,0,0.1);
}


.post p ,.post .entry-content p, .post ul li, .post ol li, .post ul li,.post .entry-content ol li,.post .entry-content ul li, .content p, .content p ul li , .content ul li,  .content ol li, del {
	color: #D6D6D6;
	font-size: 16px;
	line-height: 2.4em;
	text-align:left;
	text-indent: 0;
	padding: 0;
	margin-bottom: 2em;
}

/*Entey Title*/

.entry-header {
	overflow: hidden;
	margin-bottom: 20px;
}
.entry-title {
	font-weight: lighter;
	color: #000;
	padding: 0;
	text-align: center;

}
.entry-title a {
	font-size: 40px;
	line-height: 60px;
	font-weight: lighter;
	color: #FFF;
	transition: all 0.5s ease-in;
}
.entry-title a:hover {
	color: rgba(255,255,255,0.8);
}

/*Post Format*/
.statusheader{
	float: left;
	display: block;
	width: 100px;
}
.status-content {
	float: right;
	width: 590px;
	margin: 0 10px 0 0;
}
	
.statusavatar img{

	border-radius: 50%;
}
.statusdate {

	margin-top: 20px;
}
.statusdate a{
	color: rgba(255,255,255,0.8);
}





/* Thumb */
.thumbimage {
	margin: 0 auto -62px auto;
	display: block;
	width: 878px;
	padding: 0;
}

/*Caption*/
.wp-caption {
	padding: 0;
	position: relative;
	display: block;
}
.entry-content .wp-caption .wp-caption-text,
.entry-content .gallery-caption,
.entry-content .entry-caption {
	font-style: normal;
	font-size: 12px;
	font-size: 0.857142857rem;
	background: #000;
	-moz-opacity:.50;
	filter:alpha(opacity=50);
	opacity:.50;
	color: #FFF;
	position: absolute;
	width:98%;
	bottom: 0;
	left: 0;
	padding: 5px 0 ;
	margin: auto auto 6px 5px;
	text-indent: 14px;
}
.thesinglecontent .wp-caption .wp-caption-text,
.thesinglecontent .gallery-caption,
.thesinglecontent .entry-caption {
	font-style: normal;
	font-size: 12px;
	font-size: 0.857142857rem;
	background: #000;
	-moz-opacity:.50;
	filter:alpha(opacity=50);
	opacity:.50;
	color: #FFF;
	position: absolute;
	width:98%;
	bottom: 0;
	left: 0;
	padding: 5px 0 ;
	margin: auto auto 14px 36px;
}

/*More Button*/
.readmore {
	text-align: center;
}
.readmore a{
	display: inline-block;
	margin-top: 30px;
	color: rgba(256,256,256,0.7);
	font-size: 20px;
	font-weight: lighter;
	background: rgba(0,0,0,0.09);
	padding: 20px 50px;
	transition: all 0.3s ease;
}
.readmore a:hover{
	color: #FFF;
	background: rgba(0,0,0,0.2);
}


 .thecontent p{
	margin-top: 20px;
	line-height: 2em;
}

/*Content*/
/*List*/
.entry-content ul li,.singlecontent ul li,blockquote ul li{
	line-height: 2em;
}
.content p img {
	display: block;
	margin: 10px auto;
}
/*Blockquote*/
blockquote{
	font-size: 15px;
	width: 85%;
	margin: 20px auto;
	padding: 30px 10px 30px 40px;
	line-height: 2;
	background: rgba(256,256,256,0.1);
	border-left: 8px solid rgba(0,0,0,0.1);
}

/*Page Navi*/


.footerlink a{
	display: inline-block;
	text-align: center;
	font-family: "Microsoft YaHei",微软雅黑,"Microsoft JhengHei",华文细黑,STHeiti,MingLiu;
	font-weight: lighter;
	color: rgba(256,256,256,0.8);
	font-size: 16px;
